@using GameFeed.Web.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - GameFeed</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700|Raleway:400,700" rel="stylesheet">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />

    <!-- Styling -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/general.css" rel="stylesheet" />
    <link href="~/Content/layout.css" rel="stylesheet" />
    <link href="~/Content/ripple.min.css" rel="stylesheet" />
    @RenderSection("Css", false)
</head>
<body>
    <nav id="side-nav">
        <div id="logo">
            <a href="@Url.Action("Index", "Home")"><h1><i class="fa fa-gamepad" aria-hidden="true"></i>GAME<span>FEED</span></h1></a>
        </div>
        <div id="side-nav-content">
            @if (!User.Identity.IsAuthenticated) {
                @Html.Partial("_Login", new LoginModel())
            }
            else {
                <a href="@Url.Action("Logout", "Account")"><button class="col-xs-12">Logout</button></a>
            }
        </div>
    </nav>
    <section id="content">
        @RenderBody()
    </section>

    <!-- Javascript -->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.17.0/dist/jquery.validate.min.js"></script>
    <script>$("#login-form").validate();</script>
    @RenderSection("Scripts", false)
</body>
</html>